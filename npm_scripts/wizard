#!/bin/env coffee


{prompt} = require('inquirer')
{writeFile} = require('fs-cson')


nonEmpty = (str) ->
  str.trim().length > 0

qName =
  message: 'Give this project a name:'
  name: 'name'
  validate: nonEmpty

qLang =
  default: 'en'
  message: 'Which language would you like to use?'
  name: 'lang'
  validate: nonEmpty

qHeight =
  default: 250
  message: 'Height:'
  name: 'height'
  validate: nonEmpty

qType =
  default: 'banner'
  message: 'Type:'
  name: 'type'
  validate: nonEmpty

qWidth =
  default: 300
  message: 'Width:'
  name: 'width'
  validate: nonEmpty

prompt([qName, qLang, qType, qWidth, qHeight]).then (answers) ->
  path = 'app/variables.cson'

  writeFile path, answers, (err) ->
    throw err if err?
    console.log "Variables saved to '#{path}'. You can always edit the find manually or run this script again to start over.\n"
