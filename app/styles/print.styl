// print styling based around bacssic (https://github.com/joedanhol/bacssic)

@media print
  *
    background transparent
    color #000
    box-shadow none
    text-shadow none

  a
    &, &:visited
      text-decoration underline

    &[href]:after
      content " (" attr(href) ")"

    &[href^="#"]:after,
    &[href^="javascript:"]:after,
    .ir &:after
      content ""

  abbr[title]:after
    content " (" attr(title) ")"

  blockquote, pre
    border 1px solid #999
    page-break-inside avoid

  h2, h3, p
    orphans 3
    widows 3

  img
    max-width 100% !important

  img, tr
    page-break-inside avoid
