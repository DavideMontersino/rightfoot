// basic styling

::selection
  background #222
  color: #fff
  text-shadow none

audio, canvas, img, video
  vertical-align middle

hr
  border 0
  border-top 2px solid #ccc
  display block
  height 1px
  margin 1em 0
  padding 0

html
  background-color #e5e5e5
  font-size 1em
  height 100%
  line-height 1.2
  margin 0 20px
  text-shadow none

html, input, button, textarea, select
  color #000
  font-family Arial, Helvetica, sans-serif

h1, h2, h3, h4, h5, h6
  margin-bottom 0

textarea
  resize vertical
